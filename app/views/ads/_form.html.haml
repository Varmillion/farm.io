= simple_form_for @ad, html: { multipart: true } do |f|
  -if @ad.errors.any?
    #errors
      %h2
      = pluralize(@ad.errors.count, "error")
      prevent this Ad from saving
      %ul
      - @ad.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.input :image, input_html: { class: 'form-control'}

  .form-group
    = f.input :location, input_html: { class: 'form-control'}

  .form-group
    = f.input :title, input_html: { class: 'form-control'}

  .form-group
    = f.input :size, input_html: { class: 'form-control'}

  .form-group
    = f.input :price, input_html: { class: 'form-control'}


    = f.button :submit, class: "btn btn-primary"

